datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "./zod-prisma-types"
}

model Game {
  id String @id @default(cuid())

  slug        String   @unique
  name        String
  price       Decimal  @db.Money
  description String?  @db.VarChar(1000)
  releaseDate DateTime
  imageUrl    String?  @db.VarChar(255)
  rating      Float

  developers Developer[]
  publishers Publisher[]
  platforms  Platform[]
  genres     Genre[]
  tags       Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Developer {
  id    String @id @default(cuid())
  slug  String @unique // nusantara-studio-1a2b3c
  name  String // Nusantara Studio
  games Game[]
}

model Publisher {
  id    String @id @default(cuid())
  slug  String @unique
  name  String
  games Game[]
}

model Platform {
  id    String @id @default(cuid())
  slug  String @unique
  name  String
  games Game[]
}

model Genre {
  id    String @id @default(cuid())
  slug  String @unique
  name  String
  games Game[]
}

model Tag {
  id    String @id @default(cuid())
  slug  String @unique
  name  String
  games Game[]
}
